<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/wallpapersFragment">

    <fragment
        android:id="@+id/wallpapersFragment"
        android:name="com.example.wallpaperapp.presentation.wallpapers_screen.WallpapersFragment"
        android:label="wallpapers_fragment"
        tools:layout="@layout/wallpapers_fragment" >
        <action
            android:id="@+id/action_wallpapersFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_wallpapersFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.wallpaperapp.presentation.detail_screen.DetailFragment"
        android:label="detail_fragment"
        tools:layout="@layout/detail_fragment" >
        <argument
            android:name="wallpaper"
            app:argType="com.example.wallpaperapp.domain.models.Photo" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.wallpaperapp.presentation.favorites_screen.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
</navigation>