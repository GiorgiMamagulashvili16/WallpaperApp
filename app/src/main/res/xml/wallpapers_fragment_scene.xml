<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        android:id="@+id/menuMotion"
        motion:constraintSetEnd="@+id/menuMotionEnd"
        motion:constraintSetStart="@id/menuMotionStart"
        motion:duration="600">
        <OnClick motion:targetId="@id/menuImageView"/>
    </Transition>

    <ConstraintSet android:id="@+id/menuMotionStart"></ConstraintSet>

    <ConstraintSet android:id="@+id/menuMotionEnd">
        <Constraint
            android:id="@+id/categoryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_140_dp"
            android:layout_marginTop="@dimen/dimens_6_dp"
            motion:layout_constraintTop_toBottomOf="@id/wallpaperTxtTextView" />
        <Constraint
            android:id="@+id/menuImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_20_dp"
            android:scaleY="-1"
            motion:layout_constraintBottom_toBottomOf="@+id/wallpaperTxtTextView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/wallpaperTxtTextView" />
    </ConstraintSet>

</MotionScene>