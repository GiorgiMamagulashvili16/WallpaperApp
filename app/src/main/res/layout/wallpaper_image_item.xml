<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="13dp"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:id="@+id/wallpaperCardView"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.9"
            android:layout_height="match_parent"
            android:elevation="0dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/wallpaperImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/wallpaperTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/linear_gradient_text"
                    android:elevation="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/mplus_rounded1c_regular"
                    android:gravity="bottom|start"
                    android:maxLines="1"
                    android:paddingHorizontal="3dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    tools:text="Title Title Title Title Title Title" />
        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>