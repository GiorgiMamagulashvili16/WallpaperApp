<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    tools:context=".presentation.detail_screen.DetailFragment">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/favoritesButton"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lockScreenButton" />

    <androidx.cardview.widget.CardView
        android:id="@+id/wallpaperDetailCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="28dp"
        android:elevation="0dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/favoritesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/wallpaperDetailImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lotieAnim"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="false"
            app:lottie_fileName="success_animation.json"
            app:lottie_loop="false" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lockScreenButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:src="@drawable/ic_lock_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/favoritesButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/homeButton" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/homeButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lockScreenButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
    
</androidx.constraintlayout.widget.ConstraintLayout>