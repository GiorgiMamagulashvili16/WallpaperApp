<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    tools:context=".presentation.wallpapers_screen.WallpapersFragment">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/wallpapers_fragment_scene">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wallpaperTxtTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/mplus_rounded1c_medium"
            android:text="@string/wallpapers"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_20_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/categoryRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimens_40_dp"
            android:padding="30dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categoryRecyclerView"
            tools:layout_editor_absoluteX="0dp"
            tools:listitem="@layout/wallpaper_image_item" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/searchImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_20_dp"
            android:src="@drawable/ic_find_icon"
            app:layout_constraintBottom_toBottomOf="@+id/wallpaperTxtTextView"
            app:layout_constraintEnd_toStartOf="@+id/menuImageView"
            app:layout_constraintTop_toTopOf="@+id/wallpaperTxtTextView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/menuImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_20_dp"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@+id/wallpaperTxtTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/wallpaperTxtTextView" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/searchEditText"
            android:layout_width="@dimen/dimens_0_dp"
            android:layout_height="@dimen/dimens_40_dp"
            android:layout_marginHorizontal="@dimen/dimens_5_dp"
            android:backgroundTint="@color/white"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dimens_5_dp"
            android:textColor="@color/white"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@id/searchImageView"
            app:layout_constraintStart_toEndOf="@id/wallpaperTxtTextView" />
    </androidx.constraintlayout.motion.widget.MotionLayout>

    <ProgressBar
        android:id="@+id/wallpaperProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>